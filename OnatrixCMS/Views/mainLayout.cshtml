@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
	Layout = null;
    var pageTitle = !string.IsNullOrEmpty(ViewBag.Title) ? $"{ViewBag.Title} | Onatrix - Financial Solutions For Your Business" : "Onatrix - Financial Solutions For Your Business";
}

<!DOCTYPE html>
<html lang="sv-se">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script defer src="https://kit.fontawesome.com/13e3fe46f0.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/CSS/main.css">
    <title>@pageTitle</title>
</head>
<body>
	<div class="wrapper">
		<header>
			<div class="topbar">
                <div class="container">
                    <div class="address">Klarabergsviadukten 90, 111 64 Stockholm</div>    
                    <div class="socialmedia">
                        <a class="social" href="#"><i class="fa-brands fa-facebook-f" style="color:white;"></i></a>
                        <a href="#"><i class="fa-brands fa-twitter" style="color: white;"></i></a>
                        <a href="#"><i class="fa-brands fa-linkedin-in" style="color: white;"></i></a>
                    </div>
                </div>
            </div>
			<div class="navbar">
                <nav class="container">
                    <a class="logo" href="/">
                        <img src="Images/logotype.svg" alt="Onatrix logotype">
                    </a>                    
                    <nav class="menu-bars">
                        <a class="nav-link" href="/about">About</a>
                        <a class="nav-link" href="/services">Services</a>
                        <a class="nav-link" href="/projects">Projects</a>
                        <a class="nav-link" href="/contacs">Contact</a>   
                    </nav>
                    <div class="search">
                        <i class="fa-solid fa-magnifying-glass"></i>                                                  
                    </div>
                    <button class="toggle-btn btn-menu">
                        <i class="fa-solid fa-bars"></i>
                    </button>
                </nav>
             </div>
        </header>
		<main>
			@RenderBody()
		</main>
		<footer class="bg-dark">
            <div class="container">
                <div class="copyright">&copy; Onatrix. All Rights Reserved. Credits to <span>Themesflat</span></div>
            </div>
        </footer>
    </div
    
</body>
</html>